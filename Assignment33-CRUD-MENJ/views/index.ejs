<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>CRUD MEN</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>
  <body class="bg-dark text-light">
    <div class="container">
      <div class="row pt-5">
        <div class="col-md-6 col-sm-12">
          <h2>Quotes Maker</h2>
          <form action="/quotes" method="POST" class="bg-warning p-3 rounded-1">
            <div class="mb-3">
              <label for="nameInp" class="form-label text-dark">Name</label>
              <input
                type="text"
                class="form-control"
                id="nameInp"
                name="name"
              />
            </div>
            <div class="mb-3">
              <label for="quoteInp" class="form-label text-dark">Quote</label>
              <input
                type="text"
                class="form-control"
                id="quoteInp"
                name="quote"
              />
            </div>
            <button id="submitBtn" type="button" class="btn btn-primary">
              Create
            </button>
            <button id="addNewBtn" type="button" class="btn btn-secondary">
              Add New
            </button>
          </form>
        </div>
        <div class="col-md-6 col-sm-12">
          <h2>Quotes</h2>
          <div class="list-group bg-light">
            <% for(var i = 0; i < quotes.length; i++) {%>
            <div class="row" data-id="<%= quotes[i]._id %>">
              <div class="col-md-9">
                <a
                  class="list-group-item list-group-item-action"
                  aria-current="true"
                >
                  <div class="d-flex w-100 justify-content-between">
                    <h5 class="quote-desc" class="mb-1">
                      <%= quotes[i].quote %>
                    </h5>
                  </div>
                  <small class="text-primary"
                    >By-
                    <span class="quote-auth"><%= quotes[i].name %></span></small
                  >
                </a>
              </div>
              <div class="col-md-3 px-0 buttons">
                <div
                  class="btn-group"
                  role="group"
                  aria-label="Basic mixed styles example"
                  style="top: 20%"
                >
                  <button type="button" class="btn btn-danger delBtn">
                    Delete
                  </button>
                  <button type="button" class="btn btn-success editBtn">
                    Edit
                  </button>
                </div>
              </div>
            </div>

            <% } %>
          </div>
        </div>
      </div>
    </div>

    <script src="/main.js"></script>
  </body>
</html>
